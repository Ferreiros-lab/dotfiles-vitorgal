# Path to your oh-my-zsh configuration.
ZSH=${HOME}/.oh-my-zsh

# AUto-update oh-my-zsh without prompting
DISABLE_UPDATE_PROMPT=true

# Set name of the theme to load (in ~/.oh-my-zsh/themes/)
ZSH_THEME="oneend"

# Plugins to load (from oh-my-zsh)
plugins=(git zsh-syntax-highlighting)

# Source other files
source ${ZSH}/oh-my-zsh.sh
source ${HOME}/.zsh-alias
# Configure chruby and let it auto-switch based on .ruby-version files
source /usr/local/share/chruby/chruby.sh
source /usr/local/share/chruby/auto.sh

# Disable autocorrect
unsetopt correct_all

# Set colors
export LSCOLORS=hxfxcxdxbxegedabagacad

# Other settings
export PATH="/usr/local/bin:/usr/local/sbin:$PATH:/usr/local/share/npm/bin"
export EDITOR="vim"

# source z
source "$(brew --prefix)/etc/profile.d/z.sh"
